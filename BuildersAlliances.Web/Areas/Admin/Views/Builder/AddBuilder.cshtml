@model BuildersAlliances.Domain.Builder


@{
    ViewBag.Title = "AddManufaturer";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
              Add  Builder
            </header>
            <div class="panel-body">
             
                    @using (Ajax.BeginForm("AddBuilder", "Manufacturer", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddSuccess", OnBegin = "ShowLoader" }, new { @class = "form-horizontal", @id = "signupaForm" }))
                    {
                        <div class="row">
                            <div class="col-md-4">
                            <label  >Builder Name</label>
                          </div>

                            <div class="col-md-4">
                                <label>Phone</label>
                                </div>

                            <div class="col-md-4">
                                <label>Email</label>
                            </div>
                            <div>
                                
                            </div>
                         </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.BuilderName, new { @class = "form-control col-md-4", placeholder = "Builder Name" })
                                @Html.ValidationMessageFor(m => m.BuilderName, "", new { @class="error" })
                             </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control col-md-4", placeholder = "Phone" })
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "error" })
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-4", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                            </div>

                               
                            </div>

                        <div class="row">
                                <div class="col-md-4">
                                    <label>Address1</label>
                                </div>

                                <div class="col-md-4">
                                    <label>Address2</label>
                                </div>

                            <div class="col-md-4">
                                <label>Address3</label>
                            </div>

                                
                                <div>

                                </div>
                            </div>
                        <div class="row">
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control col-md-4", placeholder = "Address1" })
                                    @Html.ValidationMessageFor(m => m.Address1, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control col-md-4", placeholder = "Address2" })
                                </div>
                                
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Address3, new { @class = "form-control col-md-4", placeholder = "Address3" })
                            </div>



                            </div>

                  

                            <div class="row">
                                <div class="pull-right btnsetting">
                                         <button type="submit" id="btnSave" class="btn btn-info">Save</button>
                                    <button type="button" onclick="Close();" class="btn btn-cancel">Cancel</button>
                                    </div>
                                </div>

                                @Html.HiddenFor(model=>model.BuilderId)
                    }
                
            </div>
        </section>
    </div>
</div>

