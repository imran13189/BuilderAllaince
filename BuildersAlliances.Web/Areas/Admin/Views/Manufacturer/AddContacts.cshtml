@model BuildersAlliances.Domain.Manufacturer

@{
    Layout = null;
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            @*<header class="panel-heading">
                Add  Contact
            </header>*@
            <div class="panel-body">

                @using (Ajax.BeginForm("AddContact", "Manufacturer", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddContactSuccess", OnBegin = "ShowLoader" }, new { @class = "form-horizontal", @id = "contactForm" }))
                {
                    <fieldset>
                        <legend>Delivery</legend>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Name</label>
                            </div>

                            <div class="col-md-4">
                                <label>Delivery Contact</label>
                            </div>


                            <div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.DeliveryName, new { @class = "form-control col-md-4", placeholder = "Name" })
                                @Html.ValidationMessageFor(m => m.DeliveryName, "", new { @class = "error" })
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.DeliveryContact, new {  @class = "form-control col-md-4", placeholder = "Phone" })
                                @Html.ValidationMessageFor(m => m.DeliveryContact, "", new { @class = "error" })
                            </div>



                        </div>

                        </fieldset>
                        <fieldset>
                            <legend>Service</legend>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Name</label>
                                </div>

                                <div class="col-md-4">
                                    <label>Service Contact</label>
                                </div>


                                <div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control col-md-4", placeholder = "Name" })

                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.ServiceContact, new { @class = "form-control col-md-4", placeholder = "Phone" })

                                </div>



                            </div>
                            </fieldset>
                            <fieldset>
                                <legend>Sales</legend>

                                <div class="row">
                                    <div class="col-md-4">
                                        <label>Name</label>
                                    </div>

                                    <div class="col-md-4">
                                        <label>Sales Contact</label>
                                    </div>


                                    <div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.SaleName, new { @class = "form-control col-md-4", placeholder = "Name" })

                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.SalesContact, new { @class = "form-control col-md-4", placeholder = "Phone" })

                                    </div>



                                </div>

                                </fieldset>



                                <div class="row">
                                    <div class="pull-right btnsetting">
                                        <button type="submit" id="btnSaveContact" class="btn btn-info">Save</button>
                                        <button type="button" onclick="CloseContact();" class="btn btn-cancel">Cancel</button>
                                    </div>
                                </div>

                                @Html.HiddenFor(model => model.ManufacturerId)
                                }

</div>
        </section>
    </div>
</div>



