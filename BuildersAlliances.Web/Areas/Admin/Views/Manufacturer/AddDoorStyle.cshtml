@model BuildersAlliances.Domain.DoorStyle


@{
    
    Layout = null;
}



    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
               
                <div class="panel-body">

                    @using (Ajax.BeginForm("AddDoorStyle", "Manufacturer", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddDoorSuccess", OnBegin = "ShowLoader" }, new { @class = "form-horizontal", @id = "doorForm" }))
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <label>Door Style</label>
                            </div>



                            <div class="col-md-4">
                                <label></label>
                            </div>
                            <div>



                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.StyleName, new { @class = "form-control col-md-4", placeholder = "Door Style" })
                                @Html.ValidationMessageFor(m => m.StyleName, "", new { @class = "error" })
                            </div>

                            <div class="col-md-4">
                                <button type="submit" id="btnDoor" class="btn btn-info">Save</button>
                            </div>
                        </div>





                            @Html.HiddenFor(model => model.DoorId)
                            @Html.HiddenFor(model => model.ManufacturerId, new { @class = "ManufacturerId" })
                    }

                </div>
            </section>
        </div>
    </div>



