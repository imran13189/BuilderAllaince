
@{
    Layout = null;
}

<!DOCTYPE html>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Search Truck
            </header>
            <div class="panel-body">


                <div class="row">
                    <div class="col-md-4">

                        <label>Truck No.</label>
                    </div>





                    <div class="col-md-4">
                        <label>Driver</label>

                    </div>


                    <div class="col-md-4">
                        <label>Capacity</label>
                    </div>


                    <div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <input class="form-control FilterSearch" id="txtTruckNumber" placeholder="Truck No." type="text" name="FilterSearch">
                    </div>
                    <div class="col-md-4">
                        <input class="form-control FilterSearch" id="txtDriver" placeholder="Drive" type="text" name="FilterSearch">
                    </div>

                    <div class="col-md-4">

                        <input class="form-control FilterSearch" id="txtCapacity" value="0" placeholder="Capacity" type="text" name="FilterSearch">
                    </div>



                </div>







                </div>










                <div class="row">
                    <div class="pull-right btnsetting">
                        <button type="button" id="btnSearch" class="btn btn-info">Search</button>
                        <button type="button" onclick="Close();" class="btn btn-cancel">Cancel</button>
                    </div>
                </div>



            </div>
        </section>
    </div>
</div>