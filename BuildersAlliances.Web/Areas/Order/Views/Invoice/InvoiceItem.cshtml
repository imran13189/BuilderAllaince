

@{
    Layout = null;
}
<script src="~/Scripts/Custom/InvoiceItem.js"></script>

<div class="modal-header">
    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
    <h4 class="modal-title">Invoice Items</h4>
</div>

<div class="row">
    <div class="col-sm-12">
        <section class="panel">
          
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-2">

                        <input class="form-control FilterSearch1" id="txtInvoiceSKU" placeholder="Invoice SKU" type="text" name="FilterSearch">

                    </div>

                    <div id="advanceSearch" class="col-lg-6 advanceSearch">
                        <div class="col-lg-4">
                            <input class="form-control FilterSearch1" id="txtManufacturer" placeholder="Manufacturer name" type="text" name="FilterSearch">
                        </div>
                        <div class="col-lg-4">
                            <input class="form-control FilterSearch1" id="txtInvoiceName" placeholder="Invoice Name" type="text" name="FilterSearch">
                        </div>
                      

                    </div>

                    <div class="col-lg-2">
                        <span class="btn btn-sm" id="btnAdvanceSearch" onclick="ToggleSearch();">Advance search</span>
                    </div>

                    <div class="col-lg-2 pull-right">

                        <input type="button" id="btnGenerateInvoice" onclick="GenerateInvoice();" class="btn btn-info" value="Invoice">
                    </div>

                </div>

                <table class="table table-hover" data-response-handler="responseHandler" data-id-field="OrderItemId" data-show-columns="true" data-show-filter="true" data-click-to-select="true"
                       id="gridInvoices">
                    <thead>

                    </thead>
                </table>



            </div>
        </section>
    </div>
</div>




