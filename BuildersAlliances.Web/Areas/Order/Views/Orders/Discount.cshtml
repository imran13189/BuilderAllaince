@model List<BuildersAlliances.Domain.DiscountTypeModel>

@{
    Layout = null;
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
           
            <div class="panel-body">
                <table class="table  table-hover general-table">
                    <thead>
                        <tr>
                         
                            <td>Discount Name</td>
                            <td>Multiplier</td>
                            <td>Select</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                               
                                <td>@item.DiscountTypeName</td>
                                <td class="Multiplier">@item.Multiplier</td>
                                <td class="discounTypeChk"><input type="checkbox" @(item.IsSelected==true?"checked":"") onclick="SumMultiplier()">
                                    <input type="hidden" class="discountType" value="@item.DiscountTypeId" />
                                    
                                </td>
                                
                            </tr>
                           
                        }
                        <tr ><td>Total Discount</td><td><input id="TotalDiscount" type="text"></td><td><button type="button" onclick="ApplyDiscount(@ViewBag.OrderItemId)" class="btn btn-sm btn-info">Apply</button></td></tr>

                    </tbody>

                </table>
            </div>
            </section>
    </div>
    </div>
   
    <input type="hidden" id="ManufacturerId" />
