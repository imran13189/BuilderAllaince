@model BuildersAlliances.Domain.Qoute


@{
    ViewBag.Title = "AddQoute";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               Add Order
            </header>
            <div class="panel-body">
             
                    @using (Ajax.BeginForm("AddQoute", "Orders", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddSuccess", OnBegin = "ShowLoader" }, new { @class = "form-horizontal", @id = "signupaForm" }))
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <label>Builder</label>
                            </div>

                            <div>
                                
                            </div>
                         </div>
                        <div class="row">
                            
                         

                            <div class="col-md-4">
                                @Html.TextBox("SearchBuilder",(string)ViewBag.BuilderName, new { @class = "form-control col-md-4" })
                                
                            </div>




                            </div>

                   
                    


                            <div class="row">
                                <div class="pull-right btnsetting">
                                         <button type="submit" id="btnSave" class="btn btn-info">Save</button>
                                    <button type="button" onclick="Close();" class="btn btn-cancel">Cancel</button>
                                    </div>
                                </div>

                                @Html.HiddenFor(model=>model.QouteId)
                        @Html.HiddenFor(model => model.BuilderId)
                    }
                
            </div>
        </section>
    </div>
</div>

