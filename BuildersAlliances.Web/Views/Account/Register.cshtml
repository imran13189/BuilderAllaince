<body class="login-body">
    <div class="container">
        @using (Html.BeginForm("Register","Account",FormMethod.Post, new {@class="form-signin" ,@id= "signupForm" }))
        {

            <h2 class="form-signin-heading">registration now</h2>
            <div class="login-wrap">
                <p>Enter your personal details below</p>
                @Html.TextBoxFor(m => m.CompanyName, new { @class="form-control", @placeholder="Full Name", @autofocus="true" })
                @Html.ValidationMessageFor(m=>m.CompanyName)

                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Address", @autofocus = "true" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @autofocus = "true" })
                @Html.TextBoxFor(m => m.StateId, new { @class = "form-control", @placeholder = "State", @autofocus = "true" })
                @Html.TextBoxFor(m => m.CityId, new { @class = "form-control", @placeholder = "City", @autofocus = "true" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @autofocus = "true" })
                @Html.Password("ConfirmPassword","", new { @class = "form-control", @placeholder = "Retype Password", @autofocus = "true" })

                <label class="checkbox">
                    @Html.CheckBoxFor(m=>m.TermCondition, new { @value = "agree this condition" }) I agree to the Terms of Service and Privacy Policy
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Submit</button>








