@model BuildersAlliances.Domain.Colors


@{
    ViewBag.Title = "AddManufaturer";
    Layout = null;
}


    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
              
                <div class="panel-body">

                    @using (Ajax.BeginForm("AddColor", "Manufacturer", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddColorSuccess", OnBegin = "ShowLoader" }, new { @class = "form-horizontal", @id = "colorForm" }))
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <label>Color Name</label>
                            </div>



                            <div class="col-md-4">
                                <label></label>
                            </div>
                            <div>



                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.ColorName, new { @class = "form-control col-md-4", placeholder = "Color Name" })
                                @Html.ValidationMessageFor(m => m.ColorName, "", new { @class="error" })
                            </div>

                            <div class="col-md-4">
                                <button type="submit" id="btnColor" class="btn btn-info">Save</button>
                            </div>
                        </div>




                            @*<div class="row">
                                <div class="pull-right btnsetting">
                                         <button type="submit" id="btnSave" class="btn btn-info">Save</button>
                                    <button type="button" onclick="Close();" class="btn btn-cancel">Cancel</button>
                                    </div>
                                </div>*@

                            @Html.HiddenFor(model=>model.ColorId)
                            @Html.HiddenFor(model => model.ManufacturerId,new {@class="ManufacturerId" })
                    }

                </div>
            </section>
        </div>
    </div>




