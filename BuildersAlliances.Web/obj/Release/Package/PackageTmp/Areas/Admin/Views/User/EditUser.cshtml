@model BuildersAlliances.Domain.Users


@{
    ViewBag.Title = "AddManufaturer";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
             Add Truck
            </header>
            <div class="panel-body">
             
                    @using (Ajax.BeginForm("AddUser", "User", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddSuccess", OnBegin = "ShowLoader" }, new { @class = "form-horizontal", @id = "signupaForm" }))
                    {
                        <div class="row">
                            <div class="col-md-4">
                            <label  >Name</label>
                          </div>

                            <div class="col-md-4">
                                <label>Username</label>
                                </div>

                            <div class="col-md-4">
                                <label>Phone</label>
                            </div>
                            <div>
                                
                            </div>
                         </div>
                        <div class="row">
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-4", placeholder = "Name" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class="error" })
                             </div>
                          
                            <div class="col-md-4">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control col-md-4", placeholder = "Phone" })
                                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "error" })
                            </div>

                               
                            </div>



                            <div class="row">
                              
                                <div class="col-md-4 Manufacturer">
                                    <label>Password</label>
                                </div>
                               
                                <div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m=>m.Email,  new { @class = "form-control col-md-4", placeholder = "Email" } )
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(m => m.Password,  new { @class = "form-control col-md-4", placeholder = "Password"  })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                                </div>
                                </div>



                            <div class="row top-menu" >
                                <div class="pull-right btnsetting">
                                         <button type="submit" id="btnSave" class="btn btn-info">Save</button>
                                    <button type="button" onclick="Close();" class="btn btn-cancel">Cancel</button>
                                    </div>
                                </div>
                                
                                @Html.HiddenFor(model=>model.UserId)
                    }
                
            </div>
        </section>
    </div>
</div>

